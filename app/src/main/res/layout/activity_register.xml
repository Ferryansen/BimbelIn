<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteback"
    tools:context=".Register">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/popbold"
            android:gravity="center"
            android:text="Let's Sign\nYou Up!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/text_bimbel_id"
            android:layout_width="292dp"
            android:layout_height="55dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:fontFamily="@font/popregular"
            android:hint="Bimbel ID"
            android:inputType="textPersonName"
            android:paddingLeft="16dp" />

        <EditText
            android:id="@+id/text_email"
            android:layout_width="292dp"
            android:layout_height="55dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:fontFamily="@font/popregular"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_bimbel_id"
            tools:layout_editor_absoluteX="44dp" />

        <EditText
            android:id="@+id/text_name"
            android:layout_width="292dp"
            android:layout_height="55dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:fontFamily="@font/popregular"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_email"
            tools:layout_editor_absoluteX="44dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="292dp"
            android:layout_height="55dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:fontFamily="@font/popregular"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_name" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="292dp"
            android:layout_height="55dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:fontFamily="@font/popregular"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/password" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="292dp"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/popmedium"
            android:text="Sign Up"
            android:textColor="@color/whiteback"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/confirm_password"
            tools:layout_editor_absoluteX="44dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintTop_toBottomOf="@+id/register_button"
            app:layout_constraintVertical_bias="0.022">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/popregular"
                android:text="Already a member?"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/switch_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toEndOf="@id/textView5"
                android:fontFamily="@font/popmedium"
                android:text="Sign In"
                android:textColor="@color/blue"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>